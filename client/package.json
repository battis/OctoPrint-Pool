        "name": "Seth Battis",
        "email": "seth@battis.net"
    },
    "private": true,
    "homepage": "https://github.com/battis/OctoPrint-Pool#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/battis/OctoPrint-Pool.git"
    },
    "bugs": {
        "url": "https://github.com/battis/OctoPrint-Pool/issues"
    },
    "dependencies": {
        "@battis/web-app-client": "file:../../../web-app/client",
        "crypto-browserify": "^3.12.0",
        "path-browserify": "^1.0.1",
        "vanilla-router": "^1.2.8"
    },
    "devDependencies": {
        "@babel/core": "^7.13.15",
        "@tsconfig/recommended": "^1.0.1",
        "@types/copy-webpack-plugin": "^6.4.0",
        "@types/css-minimizer-webpack-plugin": "^1.1.1",
        "@types/dotenv-webpack": "^5.0.0",
        "@types/mini-css-extract-plugin": "^1.2.2",
        "@types/resize-observer-browser": "^0.1.5",
        "@typescript-eslint/eslint-plugin": "^4.21.0",
        "@typescript-eslint/parser": "^4.21.0",
        "autoprefixer": "^10.3.1",
        "babel-loader": "^8.2.2",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^7.0.0",
        "css-loader": "^5.0.1",
        "css-minimizer-webpack-plugin": "^3.0.0",
        "dotenv": "^8.2.0",
        "dotenv-webpack": "^6.0.0",
        "eslint": "^7.24.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.4.0",
        "file-loader": "^6.2.0",
        "html-minifier-terser": "^5.1.1",
        "html-webpack-plugin": "^5.3.2",
        "image-minimizer-webpack-plugin": "^2.2.0",
        "imagemin-gifsicle": "^7.0.0",
        "imagemin-jpegtran": "^7.0.0",
        "imagemin-optipng": "^8.0.0",
        "imagemin-svgo": "^8.0.0",
        "mini-css-extract-plugin": "^2.1.0",
        "msw": "^0.29.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.3.5",
        "postcss-loader": "^6.1.1",
        "postcss-preset-env": "^6.7.0",
        "precss": "^4.0.0",
        "prettier": "^2.2.1",
        "prettier-plugin-organize-imports": "^1.1.1",
        "pwa-asset-generator": "^4.0.2",
        "raw-loader": "^4.0.2",
        "sass": "^1.35.1",
        "sass-loader": "^12.1.0",
        "source-map-loader": "^2.0.0",
        "style-loader": "^3.0.0",
        "ts-loader": "^8.0.12",
        "typescript": "^4.1.3",
        "webpack": "^5.45.1",
        "webpack-cli": "^4.3.0",
        "webpack-dev-server": "^3.11.0"
    },
    "scripts": {
        "start": "webpack serve --mode=development",
        "build": "npm-run-all build:*",
        "build:client": "webpack",
        "watch": "webpack --watch",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "jsdoc": "jsdoc -c jsdoc.conf.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage"
    },
    "jshintConfig": {
        "esversion": 8,
        "strict": false,
        "-W014": true
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "sourceType": "module"
        },
        "plugins": [
            "@typescript-eslint/eslint-plugin"
        ],
        "extends": [
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "root": true,
        "env": {
            "node": true,
            "jest": true
        },
        "ignorePatterns": [
            "test/**/*"
        ],
        "rules": {
            "@typescript-eslint/interface-name-prefix": "off",
            "@typescript-eslint/explicit-function-return-type": "off",
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/ban-types": "off",
            "@typescript-eslint/explicit-module-boundary-types": "off",
            "@typescript-eslint/no-var-requires": "off"
        }
    }
}
